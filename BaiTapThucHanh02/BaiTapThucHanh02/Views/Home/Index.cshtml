@{
    ViewData["Title"] = "Thông tin sinh viên";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">

                    <p><strong>Họ tên:</strong> @ViewBag.HoTen</p>
                    <p><strong>MSSV:</strong> @ViewBag.MSSV</p>
                    <p><strong>Năm:</strong> @ViewBag.Nam</p>

                </div>
                <div class="card-footer text-center">
                    <a href="/" class="btn btn-primary">Trở về trang chủ</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Link to Bootstrap JS for interactive components -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
