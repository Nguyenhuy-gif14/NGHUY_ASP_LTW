@{
    ViewData["Title"] = "Máy tính";
}

<h1>Máy tính</h1>

<form asp-action="MayTinh" method="get">
    <div class="form-group">
        <label for="a">Số a:</label>
        <input type="number" class="form-control" id="a" name="a" value="@ViewBag.A" required>
    </div>
    <div class="form-group">
        <label for="b">Số b:</label>
        <input type="number" class="form-control" id="b" name="b" value="@ViewBag.B" required>
    </div>
    <div class="form-group">
        <label for="pheptinh">Phép tính:</label>
        <select class="form-control" id="pheptinh" name="pheptinh">
            <option value="cong">Cộng</option>
            <option value="tru">Trừ</option>
            <option value="nhan">Nhân</option>
            <option value="chia">Chia</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Tính</button>
</form>

@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}
else if (ViewBag.KetQua != null)
{
    <p class="mt-3">Kết quả: @ViewBag.A @ViewBag.PhepTinh @ViewBag.B = @ViewBag.KetQua</p>
}